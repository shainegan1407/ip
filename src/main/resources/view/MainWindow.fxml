<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="Infinity" maxWidth="Infinity"
            minHeight="450.0" minWidth="400.0"
            prefHeight="600.0" prefWidth="400.0"
            stylesheets="@../css/main.css"
            xmlns="http://javafx.com/javafx/17.0.7"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cherry.gui.MainWindow">
    <children>
        <TextField fx:id="userInput" onAction="#handleUserInput"
                   prefHeight="41.0"
                   promptText="Type your order here..."
                   AnchorPane.bottomAnchor="1.0"
                   AnchorPane.leftAnchor="0.0"
                   AnchorPane.rightAnchor="76.0" />
        <Button fx:id="sendButton" mnemonicParsing="false"
                onAction="#handleUserInput"
                prefHeight="41.0" prefWidth="76.0" text="Send"
                AnchorPane.bottomAnchor="1.0"
                AnchorPane.rightAnchor="0.0" />
        <ScrollPane fx:id="scrollPane" fitToWidth="true"
                    hbarPolicy="NEVER"
                    AnchorPane.bottomAnchor="43.0"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0"
                    AnchorPane.topAnchor="0.0">
            <content>
                <VBox fx:id="dialogContainer" spacing="8"
                      fillWidth="true" />
            </content>
        </ScrollPane>
    </children>
</AnchorPane>